.inst-box
  %header
    %strong
      = f.label :file_upload
    %p.desc
      = t('.description')
  .form-group
    / will be replaced by Uppy
    = f.label :file_uploads, "Select files"
    = f.file_field :file_uploads,                     |
      multiple: true,                                 |
      accept: ImageUploader::ALLOWED_TYPES.join(","), |
      data: {                                         |
        upload_server: upload_server,                 |
      }                                               |
  %ul
    = f.fields_for :file_uploads do |pf|
      = render "admin/shared/forms/file_upload", locals: { file_upload: pf.object, f: pf }
