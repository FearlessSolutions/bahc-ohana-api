.inst-box
  %header
    = f.label :description
    %p.desc
      = t('.description')
  = field_set_tag do
    = f.text_area :description, required: false, class: 'markdown-editor', class: 'form-control', value: @service.description.try(:gsub, /\n/, '\n')

:javascript
  var simplemde = new SimpleMDE({ element: $(".markdown-editor")[0] });

