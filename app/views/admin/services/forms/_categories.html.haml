.inst-box
  %header
    %strong
      = f.label :categories
    %p.desc
      = t('.description')

  = hidden_field_tag 'service[category_ids][]', nil
  = field_set_tag nil, id: 'categories' do
    = f.label :services
    = nested_categories(Category.where(type: 'service').arrange(order: :taxonomy_id))
  = hidden_field_tag 'situation[category_ids][]', nil
  = field_set_tag nil, id: 'categories' do
    = f.label :situations
    = nested_categories(Category.where(type: 'situation').arrange(order: :taxonomy_id))
